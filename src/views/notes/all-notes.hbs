<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card mt-3 rounded">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }} </p>
        <!-- DELETE REQUEST -->
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <div class="d-grid gap-2 col-6 mx-auto">
          <button class="btn btn-primary btn-danger" type="submit">Elimnar</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Holis, {{user.name}}</h1>
      <p clsss="lead">Todavia no hay ninguna nota guardada. ðŸ˜¿</p>
      <a href="/notes/add" class="btn btn-success btn-block">Crear notita nueva!</a>
    </div>
  </div>
  {{/each}}
</div>
